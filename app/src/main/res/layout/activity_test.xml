<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="windowmanagertest.charlie.com.windowmanagertest.TestActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog样式Activity"
        android:onClick="btnDialogShow"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题栏上方添加自定义布局"
        android:onClick="btnAddTopLayout"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示悬浮窗"
        android:onClick="btnShowFloatWindow"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PopupWindow"
        android:onClick="btnShowPopupWindow"
        />
</LinearLayout>
